<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="#FFC107">

        <TextView
            android:id="@+id/txtRank"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgFileSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtRank" />

        <TextView
            android:id="@+id/textTimeSave"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/imgFileSave"
            android:layout_toRightOf="@id/imgFileSave"
            android:text="Time:" />

        <TextView
            android:id="@+id/textMovesSave"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textTimeSave"
            android:layout_toRightOf="@id/imgFileSave"
            android:text="Moves" />

        <TextView
            android:id="@+id/txtTimeSave"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/imgFileSave"
            android:layout_toRightOf="@+id/textTimeSave" />

        <TextView
            android:id="@+id/txtMovesSave"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@id/txtTimeSave"
            android:layout_toRightOf="@+id/textMovesSave" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imgFileSave"
            android:layout_toRightOf="@id/txtTimeSave"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="adfadsf" />
    </RelativeLayout>
</LinearLayout>
